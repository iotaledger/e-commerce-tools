{
  "name": "integration-services",
  "version": "0.1.3",
  "description": "Audit log of the ensuresec project.",
  "main": "dist/index.js",
  "scripts": {
    "build-tsc": "tsc --project ./",
    "build-lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "create-dist-folder": "mkdir -p ./dist",
    "build": "npm-run-all build-tsc build-lint",
    "test": "jest --detectOpenHandles",
    "test-watch": "npm run test -- --watchAll",
    "start-node": "node dist/index.js server",
    "start-setup-api": "node dist/index.js setup-api",
    "start": "npm-run-all build start-node",
    "setup-api": "npm-run-all build start-setup-api",
    "build-watch": "tsc --watch ",
    "serve-nodemon": "nodemon ./dist/index server",
    "serve": "run-p build-watch serve-nodemon",
    "generate-openapi-schemas": "ts-node ./src/tools/open-api-creator/index.ts",
    "generate-api-reference": "ts-node ./src/tools/markdown-creator/index.ts && swagger-markdown -i ./src/tools/markdown-creator/openApiSpecification.json -o ../documentation/docs/api_reference.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotaledger/integration-services.git"
  },
  "keywords": [
    "integration-services",
    "audit-log",
    "audit-trail-gw",
    "ssi-bridge",
    "e-commerce",
    "iota",
    "iota-streams",
    "iota-identity"
  ],
  "author": "Dominic Zettl (IOTA Foundation)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/iotaledger/integration-services/issues"
  },
  "homepage": "https://github.com/iotaledger/integration-services#readme",
  "dependencies": {
    "@iota/identity-wasm": "0.3.5",
    "@iota/streams": "^0.1.2",
    "@noble/ed25519": "^1.4.0",
    "@sinclair/typebox": "^0.12.8",
    "ajv": "^8.3.0",
    "ajv-formats": "^2.1.0",
    "async-mutex": "^0.3.1",
    "bs58": "^4.0.1",
    "date-fns": "^2.17.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.1.1",
    "express-winston": "^4.1.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.4",
    "node-fetch": "^3.1.1",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.3.3",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.5",
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.2.5",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}